CXX = g++
CXXFLAGS = -O2 -Wall -I$(MINGW_PREFIX)/include/SDL2
LDFLAGS = -L$(MINGW_PREFIX)/lib -lmingw32 -lSDL2 -lSDL2_image -lSDL2_mixer -lopengl32 -static
ODIR = obj
SRCDIR = ./src

_OBJ = main.o
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))

$(ODIR)/%.o: $(SRCDIR)/%.cpp
	@mkdir -p $(ODIR)
	$(CXX) -v -c -o $@ $< $(CXXFLAGS)

Sartre.exe: $(OBJ)
	$(CXX) $^ -o $@ $(LDFLAGS)
