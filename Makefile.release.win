CC = gcc
CFLAGS = -I./src -I/mingw64/include -I/mingw64/include/SDL2 -O2 -Wall
LDFLAGS = -L/mingw64/lib -lSDL2 -lSDL2_image -lSDL2_mixer -lGL
ODIR = obj
SRCDIR = ./src

_OBJ = main.o
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))

$(ODIR)/%.o: $(SRCDIR)/%.cpp
	mkdir -p $(ODIR)
	$(CC) -c -o $@ $< $(CFLAGS)

Sartre.exe: $(OBJ)
	$(CC) $^ -o $@ $(LDFLAGS)
