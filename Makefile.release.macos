CXX = g++
CXXFLAGS = -O2 -Wall -I${SDL2_INCLUDE_DIR} -I${SDL2_LOCAL_INCLUDE_DIR}
LDFLAGS = -L${SDL2_LIB_DIR} -L${SDL2_LOCAL_LIB_DIR} -lSDL2main -lSDL2 -lSDL2_image -lSDL2_mixer -framework OpenGL -framework CoreFoundation
ODIR = obj
SRCDIR = ./src

_OBJ = main.o
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))

$(ODIR)/%.o: $(SRCDIR)/%.cpp
		@mkdir -p $(ODIR)
			$(CXX) -v -c -o $@ $< $(CXXFLAGS)

Sartre: $(OBJ)
		$(CXX) $^ -o $@ $(LDFLAGS)
